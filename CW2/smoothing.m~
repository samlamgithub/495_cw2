function [ beta_zt ] = Filtering(nums, T, pi, A, E, Y, t)

[Num_state, Num_obser] = size(E);
T = Seq_Len = size(Y, 2);

beta = zeros(Num_state, T-t);
beta(:, T-t) = ones(Num_state, 1); % init beta zT

for k = T-1:t
    beta(:, k) = E(:, Y(k)).*(A*alpha(:,k-1)); % iterate
    alpha(:,1) = alpha(:,1)./sum(alpha(:,1)); % renormalise
end

return alpha

end